{
  "manifest_version": 3,
  "name": "Itemize Receipts",
  "version": "1.1",
  "description": "Itemize your receipts using AI",
  "action": {
    "default_icon": {
      "16": "public/16.png",
      "32": "public/32.png",
      "48": "public/48.png",
      "128": "public/192.png"
    }
  },
  "background": {
    "service_worker": "src/worker.js"
  },
  "side_panel": {
    "default_path": "src/panel/index.html"
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "128": "public/192.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://secure.splitwise.com/*"
      ],
      "js": [
        "src/content/splitwise-content.js"
      ]
    }
  ],
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://secure.splitwise.com/*"
  ]
}
