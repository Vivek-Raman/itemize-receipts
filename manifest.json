{
  "manifest_version": 3,
  "name": "Itemize Receipts",
  "version": "1.0",
  "description": "Itemize your receipts using AI",
  "action": {
    "default_icon": {
      "16": "public/16.png",
      "32": "public/32.png",
      "48": "public/48.png",
      "128": "public/192.png"
    }
  },
  "background": {
    "service_worker": "src/worker.js"
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "128": "public/192.png"
  },
  "permissions": [
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "src/panel/index.html"
  }
}